# =============================================================================
# .gitignore - Archivos y directorios a ignorar en Git
# =============================================================================

# IMPORTANTE: NO subir config.php con credenciales reales
# Crea un config.php.example para documentación

# Archivos de configuración sensibles
# config.php

# Archivos de sistema
.DS_Store
Thumbs.db
*.swp
*.swo
*~

# Logs
*.log
error_log
access_log

# Archivos temporales de PHP
*.cache
*.tmp

# Directorios de IDEs
.vscode/
.idea/
*.sublime-project
*.sublime-workspace

# Archivos de base de datos locales
*.sql.backup
*.sql.bak

# Node modules (si usas herramientas de build)
node_modules/

# Archivos de entorno
.env
.env.local

# Archivos de backup
*.bak
*.backup
*~
